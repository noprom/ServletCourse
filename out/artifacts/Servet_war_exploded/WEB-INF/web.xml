<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">
    <servlet>
        <servlet-name>HelloServlet</servlet-name>
        <servlet-class>com.huntdreams.servet.HelloServet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>RegServlet</servlet-name>
        <servlet-class>com.huntdreams.servet.RegServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>com.huntdreams.servet.LoginServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>GetInitParameterServlet</servlet-name>
        <servlet-class>com.huntdreams.servet.GetInitParameterServlet</servlet-class>
        <init-param>
            <param-name>username</param-name>
            <param-value>noprom</param-value>
        </init-param>
        <init-param>
            <param-name>password</param-name>
            <param-value>1q2w3e4r5t</param-value>
        </init-param>
    </servlet>

    <servlet-mapping>
        <servlet-name>HelloServlet</servlet-name>
        <url-pattern>/servet/HelloServet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>RegServlet</servlet-name>
        <url-pattern>/servet/RegServet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/servet/LoginServet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>GetInitParameterServlet</servlet-name>
        <url-pattern>/servet/GetInitParameterServlet</url-pattern>
    </servlet-mapping>
</web-app>